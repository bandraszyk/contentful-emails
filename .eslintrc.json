{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "indent": [ "error", 4 ],
        "quotes": [ "error", "double" ],
        "semi": [ "error", "always" ],
        "comma-dangle": [ "error", "never" ]
    }
}